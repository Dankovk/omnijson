{
  "name": "omnijson",
  "version": "0.0.4",
  "description": "A simple CLI tool to (un)jsonify files and directories",
  "main": "./dist/omnijson",
  "scripts": {
    "build:executable": "bun build src/index.ts --compile  --outfile dist/omnijson",
    "build:module": "bun build src/index.ts --outdir dist --target bun",
    "build": "bun run build:executable && bun run build:module",
    "publish-github": "npm run build && npm publish"
  },

  
  "author": "Dankov Alex <dankov.kiev@gmail.com>",
  "license": "MIT",

  "bin": {
    "omnijson": "./dist/omnijson"
  },
  "type": "module",
  "dependencies": {
    "@swc/core": "^1.6.4",
    "@swc/wasm": "^1.6.4",
    "bun": "^1.0.13"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
